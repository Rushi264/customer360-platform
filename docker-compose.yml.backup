version: '3.8'
services:
  postgres:
    image: postgres:15
    container_name: customer360-postgres
    environment:
      POSTGRES_USER: dataeng
      POSTGRES_PASSWORD: password123
      POSTGRES_DB: customer360
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - custom_network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U dataeng"]
      interval: 10s
      timeout: 5s
      retries: 5
  airflow:
    image: apache/airflow:latest
    container_name: customer360-airflow
    environment:
      AIRFLOW__CORE__DAGS_FOLDER: /opt/airflow/dags
      AIRFLOW__CORE__LOAD_EXAMPLES: 'false'
      AIRFLOW_UID: 50000
    ports:
      - "8080:8080"
    volumes:
      - ./dags:/opt/airflow/dags
    networks:
      - custom_network
    depends_on:
      postgres:
        condition: service_healthy
  kafka:
    image: confluentinc/cp-kafka:latest
    container_name: customer360-kafka
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
    ports:
      - "9092:9092"
    depends_on:
      - zookeeper
    networks:
      - custom_network
  zookeeper:
    image: confluentinc/cp-zookeeper:latest
    container_name: customer360-zookeeper
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_SYNC_LIMIT: 2
      ZOOKEEPER_INIT_LIMIT: 5
    ports:
      - "2181:2181"
    networks:
      - custom_network
  redis:
    image: redis:alpine
    container_name: customer360-redis
    ports:
      - "6379:6379"
    networks:
      - custom_network
  minio:
    image: minio/minio:latest
    container_name: customer360-minio
    ports:
      - "9000:9000"
    environment:
      MINIO_ROOT_USER: minioadmin
      MINIO_ROOT_PASSWORD: minioadmin
    volumes:
      - minio_data:/data
    networks:
      - custom_network
    command: server /data
  mlflow:
    image: ghcr.io/mlflow/mlflow:latest
    container_name: customer360-mlflow
    ports:
      - "5000:5000"
    volumes:
      - mlflow_data:/mlflow
    networks:
      - custom_network
    command: mlflow server --host 0.0.0.0
  metabase:
    image: metabase/metabase:latest
    container_name: customer360-metabase
    ports:
      - "3000:3000"
    environment:
      MB_DB_TYPE: postgres
      MB_DB_DBNAME: metabase
      MB_DB_HOST: postgres
      MB_DB_USER: dataeng
      MB_DB_PASS: password123
      MB_DB_PORT: 5432
      JAVA_TIMEZONE: UTC
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - custom_network
    volumes:
      - metabase_data:/metabase-data
    healthcheck:
      test: curl --fail -s http://localhost:3000/api/health
      interval: 30s
      timeout: 10s
      retries: 5
volumes:
  postgres_data:
  minio_data:
  mlflow_data:
  metabase_data:
networks:
  custom_network:
    driver: bridge
